<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ref_code_form_view" model="ir.ui.view">
            <field name="name">ref_code_form</field>
            <field name="model">ref.code</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <group>
                            <field name="bank_id"/>
                            <field name="ref_no"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ref_code_tree_view" model="ir.ui.view">
            <field name="name">ref_code_tree</field>
            <field name="model">ref.code</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="bank_id"/>
                    <field name="ref_no"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>