<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="vn_location_form_view" model="ir.ui.view">
            <field name="name">vn_location_form</field>
            <field name="model">vn.location</field>
            <field name="arch" type="xml">
                <form string="Đơn vị hành chính">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="tên"/>
                            </h1>
                        </div>
                        <group>
                            <field name="slug"/>
                            <field name="type"/>
                            <field name="name_with_type"/>
                            <field name="code"/>
                            <field name="path"/>
                            <field name="path_with_type"/>
                            <field name="parent_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="vn_location_tree_view" model="ir.ui.view">
            <field name="name">vn_location_tree</field>
            <field name="model">vn.location</field>
            <field name="arch" type="xml">
                <tree string="Đơn vị hành chính">
                    <field name="slug"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="name_with_type"/>
                    <field name="code"/>
                    <field name="path"/>
                    <field name="path_with_type"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>


        <record id="vn_location_act_window" model="ir.actions.act_window">
            <field name="name">Location</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vn.location</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem
                name="Đơn vị hành chính"
                id="vn_location_menu"
                groups="base.group_system"
                action="vn_location_act_window"/>

    </data>
</odoo>